<!DOCTYPE html>
<!--[if IE 9 ]><html class="ie9 no-js"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--><html class="no-js"><!--<![endif]-->
<head>
    <meta charset="utf-8" />
    {% if settings.favicon != blank %}
        <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
    {% endif %}
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1' /><![endif]-->
    <link rel="canonical" href="{{ canonical_url }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    {% render 'site-social-meta' %}
    {{ 'style.scss.css' | asset_url | stylesheet_tag }}
    <!-- SCRIPTS -->
    <script async src="{{ 'modernizr.min.js' | asset_url }}"></script>
    <script async src="{{ 'respond.min.js' | asset_url }}"></script>
    <script async src="{{ 'shopify_common.js' | shopify_asset_url }}"></script>
    {% if template contains 'customers' %}
    <script async src="{{ 'customer_area.js'  | shopify_asset_url }}"></script>
    {% endif %}
    <!-- JQUERY -->
    <script async src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- jQuery Dependent -->
    <script async src="{{ 'api.jquery.js' | shopify_asset_url }}"></script>
    <script>window.lazySizesConfig = window.lazySizesConfig || {};</script>
    <script src="{{ 'lazysizes.js' | asset_url }}" async=""></script>
    <script async src="{{ 'handlebars.min.js' | asset_url }}"></script>
    {{ content_for_header }}
    <title>{{ shop.name }}</title>
    {% render 'shogun-head' %}
</head>

{% capture body_class %}{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }} image-hover-light cta-fill-{{settings.cta_button_style}}{% endcapture %}

<body id="{{ page_title | handle }}" class="{{ body_class }}" class="{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '/', '-' | split: '.' }}">
  
  {{ content_for_layout }}
  
  <script async src="{{ 'shop.js' | asset_url }}"></script> 
</body>
</html>
