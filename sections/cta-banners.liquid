<section class="pad-sm">
  <div class="row row-lg carousel-title">
    <h2 class="h3">{{ section.settings.heading }}</h2>
  </div>
  <div class="row row-lg">
    <div class="container">
      <div class="block xs_s1 sm_s12 med_s12 lg_s12 top-img">
        <a href="{{ section.settings.button_link }}">
          <img src="{{ section.settings.image_left | img_url: 'large' }}">
        </a>
        <div>
          {% if section.settings.title != blank %}
            <h2 class="h3">{{ section.settings.title | escape }}</h2>
          {% endif %}
          {% if section.settings.text != blank %}
            <div class="rte-setting featured-row__subtext">{{ section.settings.text }}</div>
          {% endif %}
          {% if section.settings.button_label != blank and section.settings.button_link != blank %}
            <a href="{{ section.settings.button_link }}" class="button button--normal button--primary">
              {{ section.settings.button_label | escape }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "CTA Banners",
    "max_blocks": 2,
    "settings": [
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "image_picker",
        "id": "image_left",
        "label": "Image 1"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading 1",
        "default": "CTA Banner"
      }, {
        "type": "richtext",
        "id": "text",
        "label": "Text 1",
        "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
      }, {
        "type": "text",
        "id": "button_label",
        "label": "Button label 1"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button link 1"
      }, {
        "type": "image_picker",
        "id": "image_left_2",
        "label": "Image 2"
      }, {
        "type": "text",
        "id": "title_2",
        "label": "Heading 2",
        "default": "Image with text"
      }, {
        "type": "richtext",
        "id": "text_2",
        "label": "Text 2",
        "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
      }, {
        "type": "text",
        "id": "button_label_2",
        "label": "Button label 2"
      }, {
        "type": "url",
        "id": "button_link_2",
        "label": "Button link 2"
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          }, {
            "type": "image_picker",
            "id": "image",
            "label": "Replacement image"
          }, {
            "type": "text",
            "id": "vertical_description",
            "label": "Vertical description"
          }, {
            "type": "text",
            "id": "button_text",
            "label": "Button label",
            "default": "View Products"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "CTA Banners",
        "category": "HydroPeptide"
      }
    ]
  }
{% endschema %}