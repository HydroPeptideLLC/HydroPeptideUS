        "label":"title one"
      },
      {
        "type":"text",
        "id":"title2",
        "label":"title two"
      },      
      {
        "type":"textarea",
        "id":"detail",
        "label":"detail"
      },
	  {
        "type":"textarea",
        "id":"policy-text",
        "label":"policy text"
      }
    ]
  }
{% endschema %}

