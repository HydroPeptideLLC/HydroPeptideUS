<div class="home_featured_collection">
  {% for block in section.blocks %}
  <div class="featured_item" style="background-image: url({{ block.settings.background_image | img_url: 'master' }});">
    <a href="{{ block.settings.link }}">{{ block.settings.cta }}</a>
  </div>
  {% endfor %}
</div>
{% schema %}
{
	"name": "Home Featured Collection",
	"settings": [
		
	],
	"blocks": [
		{
			"type": "gallery_image",
			"name": "Image",
			"settings": [
				{
                  "type": "image_picker",
                  "id": "background_image",
                  "label": "Background Image"
                },
                {
                    "type": "text",
                    "id": "cta",
                    "label": "Button label"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Button link"
                }
			]
		}
	],
	"presets": [
		{
			"category": "Featured Collection",
			"name": "Home Featured Collection",
			"blocks": [
				{
					"type": "gallery_image"
				},
				{
					"type": "gallery_image"
				},
				{
					"type": "gallery_image"
				}
			]
		}
	]
}
{% endschema %}
