<section class="container-wrap" data-section-type="footer" data-section-id="{{ section.id }}">
  <footer class="site-footer">
    <div class="footer-top">
      <div class="container row row-lg">
        <div class="inner">
          <div class="left">
            <div
              class="footer__block footer__social block  {{ column }} {% if mobile_hide_block %}med_hide{% endif %}"
              {{ block.shopify_attributes }}
            >
              {%- include 'social-links' -%}
            </div>
          </div>
          <div class="right">
            <ul>
              <li class="phone">
                <a href="tel:{{ section.settings.footer_phone }}">{{ section.settings.footer_phone }}</a>
              </li>
              <li class="mail">
                <a href="mailto:{{ section.settings.footer_email }}">{{ section.settings.footer_email }}</a>
              </li>
              {% comment %}
                <li class="location"><a href="{{ section.settings.spa_link }}"><i class="icon-map-marker"></i> Find a Spa</a></li>
              {% endcomment %}
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="footer-bg">
      <div class="">
        <div class="inner">
          {% comment %} Footer top - logo, menus, social icons {% endcomment %}
          <div class="footer-inner row row-lg inline u-center">
            {%- if section.blocks.size > 0 -%}
              <div class="block s1">
                <div class="footer-blocks">
                  {%- for block in section.blocks -%}
                    {%- capture column -%}{%- cycle 'footer--left', 'footer--center', 'footer--right' -%}{%- endcapture -%}
                    {%- assign mobile_hide_block = block.settings.mobile_hide_block -%}
                    {%- case block.type -%}
                      {%- when 'logo' -%}
                        <div
                          class="footer__block footer__logo block  {{ column }} {% if mobile_hide_block %}med_hide{% endif %}"
                          {{ block.shopify_attributes }}
                        >
                          {%- if block.settings.logo -%}
                            <a href="/">
                              {%- assign image = block.settings.logo -%}
                              <img
                                src="{{ block.settings.logo | img_url: '360x' }}"
                                width="{{ block.settings.logo_width }}"
                                alt="{{ shop.name }}"
                              >
                              <noscript>
                                <img
                                  width="{{ block.settings.logo_width }}"
                                  src="{{ block.settings.logo | img_url: '360x' }}"
                                  title="{{ shop.name }}"
                                >
                              </noscript>
                            </a>
                          {%- else -%}
                            <div
                              class="placeholder-wrapper--footer"
                              style="width: {{ section.settings.logo_width | append: 'px' }};"
                            >
                              {{ 'image' | placeholder_svg_tag }}
                            </div>
                          {%- endif -%}
                        </div>

                      {%- when 'menu' -%}
                        <div
                          class="footer__block footer__menus block  {{ column }} {% if mobile_hide_block %}med_hide{% endif %}"
                          {{ block.shopify_attributes }}
                        >
                          {%- if block.settings.menu_primary != blank -%}
                            <div class="footer__menu">
                              {%- assign menu_primary = block.settings.menu_primary -%}
                              <h3 class="footer-title">{{ linklists[menu_primary].title }}</h3>
                              <ul>
                                {%- for link in linklists[menu_primary].links -%}
                                  <li class="footer-link">
                                    <a href="{{ link.url }}">{{ link.title }}</a>
                                  </li>
                                {%- endfor -%}
                              </ul>
                            </div>
                          {%- endif -%}

                          {%- if block.settings.menu_secondary != blank -%}
                            <div class="footer__menu">
                              {%- assign menu_secondary = block.settings.menu_secondary -%}
                              <h3 class="footer-title">{{ linklists[menu_secondary].title }}</h3>
                              <ul>
                                {%- for link in linklists[menu_secondary].links -%}
                                  <li class="footer-link">
                                    <a href="{{ link.url }}">{{ link.title }}</a>
                                  </li>
                                {%- endfor -%}
                              </ul>
                            </div>
                          {%- endif -%}

                          {%- if block.settings.menu_third != blank -%}
                            <div class="footer__menu">
                              {%- assign menu_third = block.settings.menu_third -%}
                              <h3 class="footer-title">{{ linklists[menu_third].title }}</h3>
                              <ul>
                                {%- for link in linklists[menu_third].links -%}
                                  <li class="footer-link">
                                    <a href="{{ link.url }}">{{ link.title }}</a>
                                  </li>
                                {%- endfor -%}
                                <li class="footer-link" id="extole-get-desktop">
                                  {% render 'Extole-global-footer-tag' %}
                                </li>
                                <!--
                                  <li class="footer-link" id="become-affiliate"><a href="/pages/hydropeptide-affiliate-partner-program">Become an Affiliate</a></li>/
                                -->
                                {% comment %} <li class="footer-link">{% render 'Extole-global-mob-footer-tag' %}</li> {% endcomment %}
                              </ul>
                            </div>
                          {%- endif -%}
                          <!--
                            <script>
                              if(screen.availWidth > 768)
                              {
                                document.querySelector('#extole-get-desktop').style.display = 'block';
                              }
                              else if(screen.availWidth < 768 )
                              {
                                document.querySelector('#extole-get-desktop').style.display = 'none';
                              }
                            </script>
                          -->
                          {%- if block.settings.menu_four != blank -%}
                            <div class="footer__menu">
                              {%- assign menu_four = block.settings.menu_four -%}
                              <h3 class="footer-title">{{ linklists[menu_four].title }}</h3>
                              <ul>
                                {%- for link in linklists[menu_four].links -%}
                                  <li class="footer-link">
                                    <a href="{{ link.url }}">{{ link.title }}</a>
                                  </li>
                                {%- endfor -%}
                              </ul>
                            </div>
                          {%- endif -%}
                        </div>
                    {%- endcase -%}
                  {%- endfor -%}

                  <div class="klaviyo-form-WzMf7v"></div>
                  <!-- <div class="klaviyo-form-SsuN9b"></div> -->
                </div>
              </div>
            {%- endif -%}
            <div class="footer-bottom">
              {%- if footer_text != blank -%}
                <div class="footer__text">
                  {{ footer_text }}
                </div>
              {%- endif -%}
              <div class="footer__copyright">
                <p>
                  &copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: '/' }}.
                  <a href="/pages/privacy-policy" target="_blank">Privacy Policy</a> |
                  <a href="/pages/terms-conditions" target="_blank">Terms & Conditions</a>
                </p>
              </div>
              {%- if section.settings.show_payment_icons -%}
                <div class="footer__payment">
                  {%- include 'payment-icons' -%}
                </div>
              {%- endif -%}
              {%- if settings.show_multiple_currencies -%}
                <div class="block s1 lg_s14 {% if footer_text == blank %}lg_p14{% endif %}">
                  <div class="footer__currency">
                    {%- include 'currency-picker' -%}
                  </div>
                </div>
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    </div>

    {% comment %} Footer bottom - Text, copyright, payment icons {% endcomment %}
    {%- assign footer_text = section.settings.text -%}
  </footer>
</section>
