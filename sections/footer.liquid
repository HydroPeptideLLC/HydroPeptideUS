          "type": "link_list",
          "id": "menu_secondary",
          "label": "Choose Menu",
          "info": "This menu won't show dropdown items"
        },
        {
          "type": "link_list",
          "id": "menu_third",
          "label": "Choose Menu",
          "info": "This menu won't show dropdown items"
        },
        {
          "type": "link_list",
          "id": "menu_four",
          "label": "Choose Menu",
          "info": "This menu won't show dropdown items"
        },
        {
          "type": "checkbox",
          "id": "mobile_hide_block",
          "label": "Hide block on mobile",
          "default": true
        }
      ]
    },
    {
      "type": "social",
      "name": "Social icons",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "Social media",
          "info": "Edit your social settings and accounts in General settings"
        },
        {
          "type": "checkbox",
          "id": "mobile_hide_block",
          "label": "Hide block on mobile",
          "default": false
        }
      ]
    }
  ]
}
