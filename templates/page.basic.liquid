<!-- /templates/page.full-width.liquid -->

<header class="section-header text-center">
{% comment %}  <h1>{{ page.title }}</h1>
  <hr class="hr--small">
  {% endcomment %}
</header>

<div class="left-right-sidebar basic_pages_top">
  
  <div class="grid__item large--one-quarter left_sidebar">
    <ul class="sidebar_menu">
      {% assign menu1 = linklists.sidebar-menu %}
      {% for grandchildlink in menu1.links %}
      <li class="sidebar-nav__item">
        <a
           href="{{ grandchildlink.url }}"
           class="sidebar_navlink
           {% if grandchildlink.active %} current{% endif %}">
          {{ grandchildlink.title | escape }}
        </a>
      </li>
      {% endfor %}
    </ul>
  </div>
  
  <div class="grid__item large--three-quarters rightside_content">
    <h1>{{ page.title }}</h1>
    <div class="rte">
  		{{ page.content }}
	</div>
  </div>
  
</div>

