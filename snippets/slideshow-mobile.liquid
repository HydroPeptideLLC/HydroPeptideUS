<section id="hero--{{ section.id }}"
    class="container-wrap mobile hero hero-slider js-hero-slider hero--text-animation {% if transition == 'zoom-out' %}hero--zoom-out{% endif %} hero--is-loading hero--dots-{{ dots_position }} {{ section.settings.slide_height }}"
    id="slideshow-module-{{ section.id }}" data-section-type="slideshow"
    data-slick="{ 'arrows':{{ showNavArrows }}, 'dots':{{ showNavDots }}, 'autoplay':{{ autoplay }}, 'dotsClass':'slick-dots hero-dots-row row row-lg', 'autoplaySpeed':{{duration}}, 'speed':{{ speed }}, 'adaptiveHeight':{{ original_height }}, 'pauseOnHover':{{ hover }}, 'fade':{{ fadeMode }}, 'infinite':true }"
    data-image-height="{{ section.settings.slide_height }}">
    {% for block in section.blocks %}

    {% comment %} Layout {% endcomment %}
    {% assign alignment = block.settings.alignment %}
    {% assign contentWidth = block.settings.content_width %}

    {% comment %} Colors {% endcomment %}
    {% unless block.settings.overlay_color == blank %}
    {% assign overlayColor = block.settings.overlay_color  %}
    {% else %}
    {% assign overlayColor = 'none' %}
    {% endunless %}
    {% assign overlayOpacity = block.settings.overlay_opacity | prepend: '.' %}

    {% assign color_style = block.settings.color_style %}

    {% assign buttonPrimaryText = block.settings.cta_color %}
    {% assign buttonPrimaryBackground = block.settings.cta_bg %}
    {% assign buttonPrimaryBorder = block.settings.cta_border | default: 'transparent' %}

    {% assign buttonSecondaryText = block.settings.cta_2_color %}
    {% assign buttonSecondaryBackground = block.settings.cta_2_bg %}
    {% assign buttonSecondaryBorder = block.settings.cta_2_border | default: 'transparent' %}

    {% comment %} Typography {% endcomment %}
    {% assign heading_size = block.settings.heading_size %}
    {% assign text_size = block.settings.text_size %}
    {% assign header_font_color = block.settings.header_font_color %}
    {% assign header_body_color = block.settings.header_body_color %}

    {% comment %} Content {% endcomment %}
    {% assign heading = block.settings.title  %}
    {% assign subheading = block.settings.subheading  %}
    {% assign text = block.settings.text %}
    {% assign cta = block.settings.cta %}
    {% assign link = block.settings.link %}
    {% assign cta_2 = block.settings.cta_2 %}
    {% assign link_2 = block.settings.link_2 %}
    {% if block.settings.image %}
    {% assign has_bg = true %}
    {% else %}
    {% assign has_bg = false %}
    {% endif %}

    {% assign counter = 1 %}

    <div class="hero-slide js-slide hero-slide--{{ alignment }} hero-slide--style-{{ color_style }}"
        {{ block.shopify_attributes }} data-block="slide" data-slick-index="{{ forloop.index }}"
        data-style="{{ color_style }}">
        {%- assign image = block.settings.image_mobile -%}
        {%- assign image_widths = '295,394,590,700,800,1000,1200,1500,1800,2000,2400' -%}
      <a href="{{ block.settings.banner_link }}"> 
      <img src="{{ image | img_url: '2048x' }}" alt="{{ image.alt | escape }}">
      </a>
      {% unless heading == blank and subheading == blank and text == blank and cta == blank %}
        {% if original_height %}

        {% endif %}
        {% endunless %}
  

        <div class="slide-text">
           
            <div class="container">
                <div class="row row-lg">
                    <div
                        >
                        {% if subheading != blank %}
                        <div class="slide-content__subheading subheading-text">{{ subheading }}</div>
                        {% endif %}

                        {% if heading != blank %}
                        <h1 style="color: {{ buttonPrimaryBackground }} !important"
                            class="slide-content__heading size--{{ heading_size }}">{{ heading }}</h1>
                        {% endif %}

                        {% if text != blank %}
                        <div style="color: {{ header_body_color }} "
                            class="slide-content__text size--{{ text_size }}">{{ text }}</div>
                        {% endif %}

                        {% if cta != blank %}
                        <a tabindex="0" {% if link != blank %}href="{{ link }}" {% endif %}
                            class="button button--{{ block.settings.button_size }} button--primary"
                            aria-label="{{ cta }}" title="{{ cta }}"
                            style="color: {{ buttonPrimaryText }}; background-color: {{ buttonPrimaryBackground }}; border-color: {{ buttonPrimaryBorder }};">{{ cta }}</a>
                        {% endif %}

                        {% if cta_2 != blank %}
                        <a tabindex="0" {% if link_2 != blank %}href="{{ link_2 }}" {% endif %}
                            class="button button--{{ block.settings.button_size }} button--secondary"
                            aria-label="{{ cta_2 }}" title="{{ cta_2 }}"
                            style="color: {{ buttonSecondaryText }}; background-color: {{ buttonSecondaryBackground }}; border-color: {{ buttonSecondaryBorder }};">{{ cta_2 }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
           
        </div>
    </div>

    {% assign counter = counter | plus:1 %}
    {% endfor %}
</section>