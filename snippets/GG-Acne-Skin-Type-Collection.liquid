<div id="Acne-Skin-Type-Collection" class="desktop-collection collectionGrid container-wrap js-collection-grid js-collectionGrid" id="collection-module-{{ section.id }}" data-show-quickview="{{ settings.show_quick_view }}" data-show_reviews="{{ show_reviews }}" data-show_quantity="{{ settings.show_quantity }}" data-color_swatches="{{ color_swatches }}" data-carousel="{{ enable_carousel }}" data-slides-per-row="{{ settings.products_columns }}" data-grid-size="{{ settings.grid_size }}">
    <div class="collection-slider__wrapper">
        <div class="bf-slider collection-slider" id="acne-slider">
            {% for product in section.settings.acne.products  %}
                {% include 'collectionGrid-block' %} 
            {% endfor %}
        </div> 
    </div>
</div>
<script>
  $(document).ready(() => {
      if(screen.availWidth > 480)
      {
        $('#acne-slider').not('slick-initialized').slick({
            infinite: false,
            slidesToShow: 4,
            slidesToScroll: 4,
            nextArrow: $('.Arrow-Button-One-Next'),
            prevArrow: $('.Arrow-Button-One-Prev')
        });
        $('#low-price-slider').not('slick-initialized').slick({
            infinite: false,
            slidesToShow: 4,
            slidesToScroll: 4,
            nextArrow: $('.Arrow-Button-Four-Next'),
            prevArrow: $('.Arrow-Button-Four-Prev')
        });
        $('#bright-eyes-slider').not('slick-initialized').slick({
            infinite: false,
            slidesToShow: 4,
            slidesToScroll: 4,
            nextArrow: $('.Arrow-Button-Two-Next'),
            prevArrow: $('.Arrow-Button-Two-Prev')
        });
        $('#expecting-mothers-slider').not('slick-initialized').slick({
            infinite: false,
            slidesToShow: 4,
            slidesToScroll: 4,
            nextArrow: $('.Arrow-Button-Three-Next'),
            prevArrow: $('.Arrow-Button-Three-Prev')
        });
        $('#bestSellers-slider').not('slick-initialized').slick({
            infinite: false,
            slidesToShow: 1,
            slidesToScroll: 1,
            nextArrow: $('.Arrow-Button-BS-Next'),
            prevArrow: $('.Arrow-Button-BS-Prev')
        });
        $('#expert-picks-slider').not('slick-initialized').slick({
            infinite: false,
            slidesToShow: 1,
            slidesToScroll: 1,
            nextArrow: $('.Arrow-Button-EP-Next'),
            prevArrow: $('.Arrow-Button-EP-Prev')
        });
        $('#kitsSets-slider').not('slick-initialized').slick({
            infinite: false,
            slidesToShow: 1,
            slidesToScroll: 1,
            nextArrow: $('.Arrow-Button-KS-Next'),
            prevArrow: $('.Arrow-Button-KS-Prev')
        });
      }
      
  })
</script>